@using ForumApp.Web.ViewModels.Post
@model PostEditInputModel

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h2 class="card-title mb-0">
                        <i class="fas fa-edit me-2"></i>Edit Post
                    </h2>
                    <a asp-controller="Board" asp-action="Details" asp-route-id="@Model.BoardId" class="btn btn-sm btn-outline-light">
                        <i class="fas fa-arrow-left me-1"></i>Back to Board
                    </a>
                </div>
                <div class="card-body">

                    <div class="alert alert-info mb-4">
                        You are editing a post in <strong>@Model.BoardName</strong>
                    </div>

                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="BoardId" />

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-semibold">Title</label>
                            <input asp-for="Title" class="form-control" placeholder="Enter post title..." />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Content" class="form-label fw-semibold">Content</label>
                            <textarea asp-for="Content" class="form-control" rows="8" placeholder="Write your post content..."></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ImageUrl" class="form-label fw-semibold">Image URL (Optional)</label>
                            <input asp-for="ImageUrl" class="form-control" placeholder="https://example.com/image.jpg" />
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        </div>

                        @if (Model.AvailableTags != null && Model.AvailableTags.Any())
                        {
                            <div class="mb-4">
                                <label class="form-label fw-semibold">Tags</label>
                                <div class="border rounded p-3 bg-light">
                                    <div class="row">
                                        @foreach (var tag in Model.AvailableTags)
                                        {
                                            <div class="col-md-6 col-lg-4 mb-2">
                                                <div class="form-check">
                                                    <input class="form-check-input"
                                                           type="checkbox"
                                                           name="TagIds"
                                                           value="@tag.Id"
                                                           id="tag-@tag.Id"
                                                           @(Model.TagIds != null && Model.TagIds.Contains(tag.Id) ? "checked" : "") />
                                                    <label class="form-check-label" for="tag-@tag.Id">
                                                        @{
                                                            var textColor = tag.ColorHex.ToLower() == "#ffffff" ? "#000000" : "#ffffff";
                                                        }
                                                        <span class="badge"
                                                              style="background-color: @tag.ColorHex; color: @textColor; font-size: 0.9em;">
                                                            @tag.Name
                                                        </span>
                                                    </label>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                    <small class="text-muted">Update the tags to better describe your post</small>
                                </div>
                            </div>
                        }

                        <div class="d-flex gap-2 justify-content-end">
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
                                <i class="fas fa-times me-1"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i>Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
