@using ForumApp.Web.ViewModels.Post
@model PostDeleteViewModel

@{
    ViewData["Title"] = "Delete Post";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h2 class="card-title mb-0">
                        <i class="fas fa-trash-alt me-2"></i>Delete Post
                    </h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-info d-flex justify-content-between align-items-center">
                        <div>
                            You are deleting a post from <strong>@Model.BoardName</strong>
                        </div>
                        <a asp-controller="Board" asp-action="Details" asp-route-id="@Model.BoardId" class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-arrow-left me-1"></i>Back to Board
                        </a>
                    </div>

                    <div class="alert alert-warning">
                        <strong>Are you sure you want to delete this post?</strong>
                    </div>

                    <div class="mb-3">
                        <h4>@Model.Title</h4>

                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <div class="mb-3">
                                <img src="@Model.ImageUrl" alt="Post image" class="img-fluid rounded shadow-sm" style="max-height: 300px; object-fit: contain;" />
                            </div>
                        }

                        <p style="word-wrap: break-word; white-space: pre-wrap;">
                            @Model.Content
                        </p>

                        <p class="text-muted"><em>Created at: @Model.CreatedAt</em></p>
                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="BoardId" />

                        <div class="d-flex gap-2 justify-content-end">
                            <button type="submit" class="btn btn-danger"
                                    onclick="return confirm('Are you sure you want to delete this post?')">
                                <i class="fas fa-trash-alt me-1"></i>Delete
                            </button>

                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                                <i class="fas fa-times me-1"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
