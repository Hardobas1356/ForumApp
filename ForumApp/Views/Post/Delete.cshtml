@using ForumApp.Web.ViewModels.Post
@model PostDeleteViewModel


@{
    ViewData["Title"] = "Delete Post";
}

<h2>Delete Post</h2>

<div class="alert alert-warning">
    <strong>Are you sure you want to delete this post?</strong>
</div>

<div class="mb-3">
    <h4>@Model.Title</h4>
    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <div class="mb-3">
            <img src="@Model.ImageUrl" alt="Post image" class="img-fluid rounded" style="max-height: 300px; object-fit: contain;" />
        </div>
    }
    <p style="word-wrap: break-word; white-space: pre-wrap; max-width: 100%; overflow-wrap: break-word;">
        @Model.Content
    </p>
    <p><em>Created: @Model.CreatedAt</em></p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="BoardId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
</form>