@model IEnumerable<ForumApp.Web.ViewModels.Board.BoardAllIndexViewModel>

@{
	ViewData["Title"] = "All Boards";
}

<h1>All Boards</h1>

<table class="table table-striped">
	<thead>
		<tr>
			<th>Name</th>
			<th>Description</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var board in Model)
		{
			<tr>
				<td>
					<a asp-controller="Board" asp-action="Details" asp-route-id="@board.Id">
						@board.Name
					</a>
				</td>
				<td>@board.Description</td>
			</tr>
		}
	</tbody>
</table>