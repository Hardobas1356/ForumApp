@using ForumApp.Web.ViewModels.Board
@model IEnumerable<BoardAllIndexViewModel>

@{
    ViewData["Title"] = "All Boards";
}

<h1 class="mb-4">All Boards</h1>

@if (!Model.Any())
{
    <div class="alert alert-info">
        There are no boards to display.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Description</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var board in Model)
                {
                    <tr>
                        <td>
                            <a asp-controller="Board" asp-action="Details" asp-route-id="@board.Id" class="text-decoration-none">
                                <strong>@board.Name</strong>
                            </a>
                        </td>
                        <td>@board.Description</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}