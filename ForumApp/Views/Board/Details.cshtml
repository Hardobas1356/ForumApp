@using static ForumApp.GCommon.SortEnums.Post
@using Microsoft.AspNetCore.Mvc.Rendering
@using ForumApp.Web.ViewModels.Board
@model BoardDetailsViewModel
@{
    ViewData["Title"] = Model.Name;
}

<div class="container py-4">
    <div class="mb-4 d-flex align-items-center">
        @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl"
                 alt="Board image"
                 class="me-2"
                 style="width: 48px; height: 48px; object-fit: cover; border-radius: 8px; box-shadow: 0 0 4px rgba(0, 0, 0, 0.2);" />
        }
        <div>
            <h2 class="fw-bold mb-0">@Model.Name</h2>
            <small class="text-muted">Created at: @Model.CreatedAt</small>

            @if (Model.Categories != null && Model.Categories.Any())
            {
                <div class="mt-2">
                    @foreach (var category in Model.Categories)
                    {
                        <span class="badge me-2 mb-1"
                              style="background-color: @category.ColorHex; color: #ffffff; font-weight: 600;">
                            @category.Name
                        </span>
                    }
                </div>
            }
        </div>
    </div>

    <p class="text-muted">@Model.Description</p>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="mb-0">Posts</h3>
        @if (User?.Identity?.IsAuthenticated == true)
        {
            <a asp-controller="Post" asp-action="Create" asp-route-id="@Model.Id" class="btn btn-success">
                <i class="fas fa-plus me-1"></i>Create Post
            </a>
        }
    </div>

    <form asp-controller="Board"
          asp-action="Details"
          asp-route-id="@Model.Id"
          method="get"
          class="mb-3 d-flex justify-content-end align-items-center">

        <label asp-for="Posts" class="me-2 mb-0 fw-semibold">Sort by:</label>

        <select name="sortOrder"
                class="form-select w-auto"
                onchange="this.form.submit()">
            @foreach (PostSortBy sortOption in Enum.GetValues(typeof(PostSortBy)))
            {
                <option value="@sortOption"
                        selected="@(Context.Request.Query["sortOrder"] == sortOption.ToString())">
                    @sortOption.ToString().Replace("Ascending", " ↑").Replace("Descending", " ↓")
                </option>
            }
        </select>
    </form>


    @if (Model.Posts == null || !Model.Posts.Any())
    {
        <p class="text-muted">No posts in this board yet.</p>
    }
    else
    {
        <div class="list-group">
            @foreach (var post in Model.Posts)
            {
                <a asp-controller="Post" asp-action="Details" asp-route-id="@post.Id"
                   class="list-group-item list-group-item-action mb-2 p-3 shadow-sm rounded border-0 text-dark text-decoration-none">
                    <div class="d-flex justify-content-between align-items-start">
                        <div class="flex-grow-1">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="fw-semibold">@post.Title</div>
                                <small class="text-muted ms-3">Created at: @post.CreatedAt</small>
                            </div>
                            @if (post.Tags != null && post.Tags.Any())
                            {
                                <div class="mt-2">
                                    @foreach (var tag in post.Tags)
                                    {
                                        <span class="badge me-1"
                                              style="background-color: @tag.ColorHex; color: @(tag.ColorHex.ToLower() == "#ffffff" ? "#000000" : "#ffffff");">
                                            @tag.Name
                                        </span>
                                    }
                                </div>
                            }
                        </div>
                    </div>
                </a>
            }
        </div>
    }
</div>
