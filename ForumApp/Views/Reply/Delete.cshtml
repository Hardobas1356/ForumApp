@using ForumApp.Web.ViewModels.Reply
@model ReplyDeleteViewModel

@{
    ViewData["Title"] = "Delete Reply";
}

<h2 class="mb-3">Delete Reply</h2>

<div class="alert alert-warning">
    <strong>Are you sure you want to delete this reply?</strong>
</div>

<div class="mb-3 p-2 border rounded">
    <p>@Model.Content</p>
    <p><em>Created at: @Model.CreatedAt</em></p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="PostId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-controller="Post" asp-action="Details" asp-route-id="@Model.PostId" class="btn btn-secondary">Cancel</a>
</form>