@using ForumApp.GCommon
@using ForumApp.Web.ViewModels.Admin.ApplicationUser
@model PaginatedResult<UserAdminViewModel>

@{
    ViewData["Title"] = "Manage Users";
    var currentSort = Context.Request.Query["sortOrder"].ToString();
    var currentSearch = Context.Request.Query["searchTerm"].ToString();

    string GetSortIcon(string columnAsc, string columnDesc)
    {
        return currentSort == columnAsc ? "▲"
             : currentSort == columnDesc ? "▼"
             : "";
    }
}

<h2 class="mb-4">Manage Users</h2>

<form method="get" class="mb-3 d-flex" role="search">
    <input type="text"
           name="searchTerm"
           value="@currentSearch"
           class="form-control me-2"
           placeholder="Search by username or email..."
           aria-label="Search users" />
    <input type="hidden" name="sortOrder" value="@currentSort" />
    <button type="submit" class="btn btn-outline-primary">Search</button>
</form>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>#</th>
            <th>
                <a asp-action="Index"
                   asp-route-sortOrder="@(currentSort == "UsernameAsc" ? "UsernameDesc" : "UsernameAsc")"
                   asp-route-searchTerm="@currentSearch"
                   class="sortable-link">
                    Username @GetSortIcon("UsernameAsc", "UsernameDesc")
                </a>
            </th>
            <th>Display Name</th>
            <th>
                <a asp-action="Index"
                   asp-route-sortOrder="@(currentSort == "EmailAsc" ? "EmailDesc" : "EmailAsc")"
                   asp-route-searchTerm="@currentSearch"
                   class="sortable-link">
                    Email @GetSortIcon("EmailAsc", "EmailDesc")
                </a>
            </th>
            <th>
                <a asp-action="Index"
                   asp-route-sortOrder="@(currentSort == "JoinDateAsc" ? "JoinDateDesc" : "JoinDateAsc")"
                   asp-route-searchTerm="@currentSearch"
                   class="sortable-link">
                    Join Date @GetSortIcon("JoinDateAsc", "JoinDateDesc")
                </a>
            </th>
            <th>
                <a asp-action="Index"
                   asp-route-sortOrder="IsDeletedFirst"
                   asp-route-searchTerm="@currentSearch"
                   class="sortable-link">
                    Deleted @(currentSort == "IsDeletedFirst" ? "▼" : "")
                </a>
            </th>
            <th>
                <a asp-action="Index"
                   asp-route-sortOrder="IsModeratorFirst"
                   asp-route-searchTerm="@currentSearch"
                   class="sortable-link">
                    Moderator @(currentSort == "IsModeratorFirst" ? "▼" : "")
                </a>
            </th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @for (int i = 0; i < Model.Items.Count; i++)
        {
            var user = Model.Items.ElementAt(i);
            <tr>
                <td>@(Model.FirstItemIndex + i)</td>
                <td>@user.UserName</td>
                <td>@user.DisplayName</td>
                <td>@user.Email</td>
                <td>@user.JoinDate</td>
                <td>
                    @if (user.IsDeleted)
                    {
                        <span class="badge bg-danger">Yes</span>
                    }
                    else
                    {
                        <span class="badge bg-success">No</span>
                    }
                </td>
                <td>
                    @if (user.IsModerator)
                    {
                        <span class="badge bg-primary">Yes</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">No</span>
                    }
                </td>
                <td>
                    <form asp-action="Delete" asp-route-id="@user.Id" method="post"
                          onsubmit="return confirm('Are you sure you want to delete this user?');">
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@await Html.PartialAsync("_Pagination")
