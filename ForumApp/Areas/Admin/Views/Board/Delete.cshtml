@using ForumApp.Web.ViewModels.Admin.Board
@model BoardDeleteViewModel

@{
    ViewData["Title"] = "Confirm Delete";
}

<h2>Confirm Deletion</h2>

<div class="alert alert-warning">
    <p>Are you sure you want to delete the board:</p>
    <h3>@Model.Name</h3>
</div>

@if (!string.IsNullOrEmpty(Model.ImageUrl))
{
    <img src="@Model.ImageUrl" alt="@Model.Name" style="max-width:200px;" class="img-thumbnail" />
}

<form asp-area="Admin"
      asp-controller="Board"
      asp-action="SoftDeleteConfirm"
      method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id"/>

    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-area="Admin"
       asp-controller="Board"
       asp-action="Index"
       class="btn btn-secondary">Cancel</a>
</form>