@page
@using static ForumApp.GCommon.GlobalConstants
@model IndexModel
@{
	ViewData["Title"] = "Profile";
	ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
	<div class="col-md-6">
		<form id="profile-form" method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
			<div class="form-floating mb-3">
				<input asp-for="Username" class="form-control" placeholder="Please choose your username." disabled />
				<label asp-for="Username" class="form-label"></label>
			</div>
			<div class="form-floating mb-3">
				<input asp-for="DisplayName" class="form-control" placeholder="Please choose your display name." />
				<label asp-for="DisplayName" class="form-label"></label>
			</div>
			<div class="mb-3 d-flex align-items-center gap-3">
				<div style="flex-shrink: 0;">
					<img src="@(!string.IsNullOrWhiteSpace(Model.ImageUrl) ? Model.ImageUrl : DEFAULT_PROFILE_PICTURE)"
						 onerror="this.onerror=null;this.src='@DEFAULT_PROFILE_PICTURE';"
						 alt="Profile Image"
						 class="img-thumbnail rounded-circle"
						 style="height: 96px; width: 96px; object-fit: cover;" />
				</div>
				<div class="flex-grow-1">
					<div class="form-floating">
						<input asp-for="ImageUrl" class="form-control" placeholder="Please choose your image url." />
						<label asp-for="ImageUrl" class="form-label"></label>
					</div>
				</div>
			</div>

			<button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
		</form>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
